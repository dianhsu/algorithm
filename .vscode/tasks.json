{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run cpp",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/scripts/linux/run.sh ./run.elf"
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build cpp"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build cpp",
            "type": "shell",
            "linux": {
                "command": "g++",
                "args": [
                    "-g",
                    "-std=c++20",
                    "-I/workspaces/algorithm/headers",
                    "${file}",
                    "-o",
                    "${fileDirname}/run.elf"
                ]
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "close": true
            }
        }
    ]
}