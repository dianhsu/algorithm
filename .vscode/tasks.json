{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build cpp",
            "type": "shell",
            "linux": {
                "command": "g++",
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/run.elf"
                ],
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        },
        {
            "label": "run cpp (linux)",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/scripts/linux/run.sh ./run.elf"
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build cpp"
            ],
            "problemMatcher": []
        }
    ]
}